<div class="container-fluid">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6 mt-4 text-center">
      <h2> What is available:</h2>
      <p style="color: green"><%= notice %></p>
      <div class="text-center mt-4">
        <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill, class: "rounded" %>
      </div>
      <div class="mt-4"><%= @product.description %></div>
      <div class="card-text"><strong><%= @product.price %>â‚¬</strong></div>
    </div>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">

      <%= link_to products_path do %>
        <div class="btn btn-primary"> Back </div>
      <% end %>

      <% if policy(@product).edit?  %>
        <%= link_to edit_product_path do %>
          <div class="btn btn-primary"> Edit </div>
        <% end %>
      <% end  %>

      <% unless policy(@product).edit? %>
        <%= link_to  new_product_renting_path(@product) do %>
          <div class="btn btn-success"> Book this product </div>
        <% end %>
      <% end %>



      <% if policy(@product).destroy?  %>
        <%= link_to product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <div class="btn btn-danger"> Delete </div>
        <% end %>
      <% end  %>
  </div>
